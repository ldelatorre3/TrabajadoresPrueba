@model TrabajadoresPrueba.Models.Trabajador

@{
    ViewData["Title"] = "Eliminar Trabajador";
}

<h2>@ViewData["Title"]</h2>

<h4>¿Estás seguro de eliminar el siguiente trabajador?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nombres</dt>
        <dd class="col-sm-10">@Model.Nombres</dd>

        <dt class="col-sm-2">Documento</dt>
        <dd class="col-sm-10">@Model.TipoDocumento @Model.NumeroDocumento</dd>

        <dt class="col-sm-2">Sexo</dt>
        <dd class="col-sm-10">@Model.Sexo</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sí, eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
